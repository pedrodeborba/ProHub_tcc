<section>
    <div class="container-fluid">
        <div class="row d-flex justify-content-center align-items-center" style="padding-top: 20px;">
            <div class="col-lg-4"></div>
            <div class="col-lg-4">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" id="search" placeholder="Pesquisar pelo nome do paciente"
                        aria-label="Recipient's username" aria-describedby="button-addon2">
                </div>
            </div>
            <div class="col-lg-4"></div>
        </div>
        <div class="row">
            <% schedules.sort((a, b)=> new Date(a.timestamp) - new Date(b.timestamp)).forEach(schedule=> { %>
                <div class="col-lg-6" id="schedule-container">
                    <div class="box">
                        <div class="post">
                            <div class="postTop">
                                <div id="name">Paciente: <%= schedule.patientName %></div>
                                <div style="display: flex;">
                                    <a href="/list/schedules/edit/<%= schedule.id %>">
                                        <div class="icons">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="19" height="19" fill="#6F7BF7" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                                            </svg>
                                        </div>
                                    </a>

                                    <a href="/list/schedules/completed/<%= schedule.id %>">
                                        <div class="icons">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="#6F7BF7" class="bi bi-check2-square" viewBox="0 0 16 16">
                                                <path d="M3 14.5A1.5 1.5 0 0 1 1.5 13V3A1.5 1.5 0 0 1 3 1.5h8a.5.5 0 0 1 0 1H3a.5.5 0 0 0-.5.5v10a.5.5 0 0 0 .5.5h10a.5.5 0 0 0 .5-.5V8a.5.5 0 0 1 1 0v5a1.5 1.5 0 0 1-1.5 1.5H3z"/>
                                                <path d="m8.354 10.354 7-7a.5.5 0 0 0-.708-.708L8 9.293 5.354 6.646a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0z"/>
                                              </svg>
                                        </div>
                                    </a>
                                </div>
                            </div>
                            <div class="posts">
                                Dia: <%= schedule.day %>
                            </div>
                            <div class="posts">
                                Mês: <%= schedule.month %>
                            </div>
                            <div class="posts">
                                Ano: <%= schedule.year %>
                            </div>
                            <div class="postBottom">
                                Horário: <%= schedule.time %>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</section>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const searchInput = document.getElementById("search");
        const scheduleContainer = document.getElementById("schedule-container");
        const schedule = Array.from(document.querySelectorAll(".post"));

        searchInput.addEventListener("input", function () {
            const searchText = searchInput.value.toLowerCase();

            schedule.forEach(function (schedule) {
                const name = schedule.querySelector("#name");
                const nameText = name.textContent.toLowerCase();
                if (nameText.includes(searchText)) {
                    schedule.style.display = "block";
                } else {
                    schedule.style.display = "none";
                }
            });
        });
    });
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
