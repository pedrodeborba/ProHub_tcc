<section>
    <div class="container">
        <div class="row" style="padding-top: 50px;">
            <div class="col-md-3">

            </div>
            <div class="col-md-6 main text-center">
                <form action="/register/patient" method="POST">
                    <h2 style="color: #fff;">REGISTRAR PACIENTES</h2>
                    <input type="text" class="box" id="name" name="name" placeholder="Name" required />
                    <br>
                    <input type="email" class="box" id="email" name="email" placeholder="Email" required />
                    <br>
                    <input type="password" class="box" id="password" name="password" placeholder="Password" required />
                    <br>
                    <input type="submit" value="Enviar" id="submit" />
                    
                    <div class="alert alert-danger text-center" role="alert" style="display:none;">
                        <% if (erro) { %>
                            <p><%= erro %></p>
                        <% } %>
                    </div>
                </form>
            </div>
            <div class="col-md-3">
            </div>
        </div>
    </div>
</section>

<script>
    function showerro(erroMessage) {
      const erroElement = document.querySelector(".alert");
      erroElement.innerText = erroMessage;
      erroElement.style.display = "block";
  
      setTimeout(function () {
        erroElement.style.display = "none";
      }, 3000);
    }
  
    const erro = "<%= erro %>";
    if (erro) {
      showerro(erro);
    }
</script>
