<section>
    <div class="container-fluid">
        <div class="row d-flex justify-content-center align-items-center" style="padding-top: 20px;">
            <div class="col-lg-4"></div>
            <div class="col-lg-4">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" id="search" placeholder="Pesquisar pelo nome do paciente"
                        aria-label="Recipient's username" aria-describedby="button-addon2">
                </div>
            </div>
            <div class="col-lg-4"></div>
        </div>
        <div class="row">
            <% schedules.sort((a, b)=> new Date(a.timestamp) - new Date(b.timestamp)).forEach(schedule=> { %>
                <div class="col-lg-6" id="schedule-container">
                    <div class="box">
                        <div class="post">
                            <div class="posts">
                                <div id="name">Paciente: <%= schedule.patientName %></div>
                            </div>
                            <div class="posts">
                                Data: <%= schedule.dateString %>
                            </div>
                            <div class="posts">
                                Dia: <%= schedule.day %>
                            </div>
                            <div class="posts">
                                Mês: <%= schedule.month %>
                            </div>
                            <div class="posts">
                                Ano: <%= schedule.year %>
                            </div>
                            <div class="posts">
                                Horário: <%= schedule.time %>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</section>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const searchInput = document.getElementById("search");
        const scheduleContainer = document.getElementById("schedule-container");
        const schedule = Array.from(document.querySelectorAll(".post"));

        searchInput.addEventListener("input", function () {
            const searchText = searchInput.value.toLowerCase();

            schedule.forEach(function (schedule) {
                const name = schedule.querySelector("#name");
                const nameText = name.textContent.toLowerCase();
                if (nameText.includes(searchText)) {
                    schedule.style.display = "block";
                } else {
                    schedule.style.display = "none";
                }
            });
        });
    });
</script>
